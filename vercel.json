{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/site/[domain]/page.tsx": {
      "maxDuration": 15
    }
  },

  "regions": ["cle1", "iad1"],

  "env": {
    "NEXT_PUBLIC_APP_DOMAIN": "@next_public_app_domain",
    "NEXT_PUBLIC_CUSTOM_DOMAIN_TARGET": "@next_public_custom_domain_target",
    "VERCEL_ACCESS_TOKEN": "@vercel_access_token",
    "VERCEL_TEAM_ID": "@vercel_team_id",
    "NEXT_PUBLIC_VERCEL_PROJECT_ID": "@next_public_vercel_project_id"
  },

  "headers": [
    {
      "source": "/site/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "(?!.*(?:localhost|127\\.0\\.0\\.1|.*\\.vercel\\.app|.*\\.vercel\\.com|link-builder-phi\\.vercel\\.app)$).*"
        }
      ],
      "destination": "/site/$host"
    },
    {
      "source": "/((?!api|_next|_static|favicon.ico).*)",
      "has": [
        {
          "type": "host",
          "value": "(?!.*(?:localhost|127\\.0\\.0\\.1|.*\\.vercel\\.app|.*\\.vercel\\.com|link-builder-phi\\.vercel\\.app)$).*"
        }
      ],
      "destination": "/site/$host/$1"
    }
  ],

  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.link-builder-phi.vercel.app"
        }
      ],
      "destination": "https://link-builder-phi.vercel.app/$1",
      "permanent": true
    }
  ],

  "crons": [
    {
      "path": "/api/cron/check-ssl",
      "schedule": "0 */6 * * *"
    }
  ]
}